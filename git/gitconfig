[user]
	name = Zhichong Fang
	email = fzc621@gmail.com
[push]
	default = simple
[pull]
	rebase = true
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta
[diff]
	tool = vimdiff
	colorMoved = default
[merge]
	tool = vimdiff
[interactive]
	diffFilter = delta --color-only
[delta]
  side-by-side = true
	navigate = true
	line-numbers = true
[alias]
	a = add
	br = branch
	cm = commit
	co = checkout

	d = diff
	dc = diff --cached
	dh = diff HEAD
	dhh = diff HEAD~1
	dl = diff HEAD~1 HEAD
	dt = difftool
	dtc = difftool --cached
	dth = difftool HEAD
	dthh = difftool HEAD~1

	l = log
	lf = ls-files
	mg = merge
	rb = rebase
	rh = reset HEAD
	rmt = remote

	sh = stash
	shl = stash list
	shs = stash show -p
	sp = stash pop

	st = status

	pl = pull
	plm = pull origin master
	plo = pull origin
	ps = push
	psm = push origin master
	pso = push origin
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	
# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local
